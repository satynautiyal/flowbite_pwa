<%= form_with(model: product, class: "contents") do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="grid grid-cols-1 md:grid-cols-1 lg:grid-cols-2 xl:grid-cols-2 gap-4 mb-8">
    <div class="">
      <%= form.label :name, class: "text-[13px]" %>
      <%= form.text_field :name, class: "block shadow rounded-md border border-[#ddd] outline-none px-3 py-2 mt-2 w-full text-[14px]" %>
    </div>

    <div class="">
      <%= form.label :color, class: "text-[13px]" %>
      <%= form.text_field :color, class: "block shadow rounded-md border border-[#ddd] outline-none px-3 py-2 mt-2 w-full text-[14px]" %>
    </div>

    <div class="">
      <%= form.label :category, class: "text-[13px]" %>
      <%= form.select :category, options_for_select([["Mobile", "mobile"], ["Laptop", "laptop"], ["Clothing", "clothing"], ["Other", "other"]]), { include_blank: false }, { class: "block shadow rounded-md border border-[#ddd] outline-none px-3 py-2 mt-2 w-full text-[14px]" } %>
    </div>

    <div class="mb-2">
      <%= form.label :price, class: "text-[13px]" %>
      <%= form.text_field :price, class: "block shadow rounded-md border border-[#ddd] outline-none px-3 py-2 mt-2 w-full text-[14px]" %>
    </div>
  </div>

  <div class="inline">
    <%= form.submit class: "text-white bg-gradient-to-r from-[#1de9b6] to-[#1dc4e9] text-sm sm:text-sm text-bold px-4 sm:px-4 py-[6px] sm:py-3 rounded-full pointer"  %>
  </div>
<% end %>
